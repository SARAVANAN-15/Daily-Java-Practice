class CrossPattern {
    public static void main(String[] args) {

        int n = 5;   // number of columns

        for (int i = 1; i <= 4; i++) {
            for (int j = 1; j <= n; j++) {

                if (j == i || j == n - i + 1) {
                    System.out.print("*");
                } else {
                    System.out.print(" ");
                }
            }
            System.out.println();
        }
    }
}
